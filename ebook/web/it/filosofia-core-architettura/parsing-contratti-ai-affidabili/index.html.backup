    <script>
        // Fallback redirect after 3 seconds
        setTimeout(function() {
            window.location.href = '../dramma-parsing-contratto-ai/';
        }, 3000);
    
        // Initialize page (hide any stuck toasts)
        document.addEventListener('DOMContentLoaded', function() {
            const toast = document.getElementById('bookmarkToast');
            if (toast) {
                toast.classList.remove('show');
                toast.style.transform = 'translateX(350px)';
                toast.style.opacity = '0';
